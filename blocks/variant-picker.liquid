

{% liquid
  assign product_resource = closest.product
  if request.visual_preview_mode and product_resource == blank
    assign product_resource = collections.all.products.first
  endif
-%}

{% render 'variant-main-picker', product_resource: product_resource %}

{% schema %}
{
  "name": "t:names.product_variant_picker",
  "tag": null,
  "settings": [
    {
      "type": "paragraph",
      "content": "t:content.resource_reference_product_variant_picker"
    },
    {
      "type": "paragraph",
      "content": "t:content.edit_variants_in_theme_settings"
    },
    {
      "type": "checkbox",
      "id": "use_metafield_colors",
      "label": "Use metafield for colors",
      "default": false,
      "info": "Bypass the 100 variants limit by using separate products for colors. Fill the 'Related Products' metafield for each product and add the exact product color in the category color field. [Learn more](https://github.com/ahmedezzaouia/Mira-Dev-Task/blob/main/README.md)"
    },
    {
      "type": "select",
      "id": "metafield_approach",
      "label": "How do you organize your color variations?",
      "options": [
        {
          "value": "product",
          "label": "Link colors one by one"
        },
        {
          "value": "collection",
          "label": "Group colors in collections"
        }
      ],
      "default": "product",
      "info": "One by one: Set up each color connection individually (good for few products). Group in collections: Organize all color variations together in one place (better for many products)."
    },
    {
      "type": "select",
      "id": "variant_style",
      "label": "t:settings.style",
      "options": [
        {
          "value": "dropdowns",
          "label": "t:options.dropdowns"
        },
        {
          "value": "buttons",
          "label": "t:options.buttons"
        }
      ],
      "default": "buttons"
    },
    {
      "type": "checkbox",
      "id": "show_swatches",
      "label": "t:settings.swatches",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "enable_section_rendering",
      "label": "Enable smooth product updates",
      "default": false,
      "info": "Update product information without page reload when clicking color options"
    },
    {
      "type": "text_alignment",
      "id": "alignment",
      "label": "t:settings.alignment",
      "default": "left"
    },
    {
      "type": "header",
      "content": "t:content.padding"
    },
    {
      "type": "range",
      "id": "padding-block-start",
      "label": "t:settings.top",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding-block-end",
      "label": "t:settings.bottom",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "default": 8
    },
    {
      "type": "range",
      "id": "padding-inline-start",
      "label": "t:settings.left",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding-inline-end",
      "label": "t:settings.right",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "default": 0
    }
  ],
  "presets": [
    {
      "name": "t:names.product_variant_picker",
      "category": "t:categories.product"
    }
  ]
}
{% endschema %}
